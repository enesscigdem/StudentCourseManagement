@model IEnumerable<SettingsViewModel>
@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-6 space-y-8">
    <div class="container mt-5 mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-white">Kullanıcı Rolleri Yönetimi</h1>
            <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="@Url.Action("CreateRole", "Settings")">Yeni Rol Ekle</a>
        </div>

        <div class="bg-gray-800 shadow-md rounded-lg p-6">
            <table class="min-w-full table-auto">
                <thead>
                    <tr>
                        <th class="px-5 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-400 uppercase">Rol Adı</th>
                        <th class="px-5 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-400 uppercase">Kullanıcı Sayısı</th>
                        <th class="px-5 py-3 border-b-2 border-gray-300 text-left text-xs font-semibold text-gray-400 uppercase">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="px-5 py-5 border-b border-gray-300 text-sm text-white">
                                @role.RoleName
                            </td>
                            <td class="px-5 py-5 border-b border-gray-300 text-sm text-gray-400">
                                @role.UserCount
                            </td>
                            <td class="px-5 py-5 border-b border-gray-300 text-sm">
                                <a class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" href="@Url.Action("EditRole", new { roleId = role.RoleId })">Düzenle</a>
                                <form asp-action="DeleteRole" asp-route-roleId="@role.RoleId" method="post" class="inline">
                                    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
