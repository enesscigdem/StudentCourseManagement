@model StudentCourseManagement.Domain.Entities.Course
@{
    ViewData["Title"] = "Kurs Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-6 space-y-8">
    <h1 class="text-3xl font-bold text-white mb-4">Kurs Düzenle</h1>

    <!-- Course Edit Form -->
    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CourseId" />
            
            <div class="mb-4">
                <label for="Title" class="block text-gray-300 text-sm font-bold mb-2">Başlık</label>
                <input asp-for="Title" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Kurs başlığı giriniz" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="Description" class="block text-gray-300 text-sm font-bold mb-2">Açıklama</label>
                <textarea asp-for="Description" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Kurs açıklaması giriniz"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="StartDate" class="block text-gray-300 text-sm font-bold mb-2">Başlangıç Tarihi</label>
                <input asp-for="StartDate" type="date" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="EndDate" class="block text-gray-300 text-sm font-bold mb-2">Bitiş Tarihi</label>
                <input asp-for="EndDate" type="date" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center">
                <a href="@Url.Action("Index", "Course")" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Geri Dön</a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Değişiklikleri Kaydet</button>
            </div>
        </form>
    </div>
</div>
