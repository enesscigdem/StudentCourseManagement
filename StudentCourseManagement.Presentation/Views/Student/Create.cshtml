@model StudentCourseManagement.Domain.Entities.Student
@{
    ViewData["Title"] = "Öğrenci Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-6 space-y-8">
    <h1 class="text-3xl font-bold text-white mb-4">Yeni Öğrenci Ekle</h1>

    <!-- Student Create Form -->
    <div class="bg-gray-800 shadow-md rounded-lg p-6">
        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label for="FirstName" class="block text-gray-300 text-sm font-bold mb-2">Ad</label>
                <input asp-for="FirstName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Öğrenci adı giriniz" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="LastName" class="block text-gray-300 text-sm font-bold mb-2">Soyad</label>
                <input asp-for="LastName" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Öğrenci soyadı giriniz" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label for="EnrollmentDate" class="block text-gray-300 text-sm font-bold mb-2">Kayıt Tarihi</label>
                <input asp-for="EnrollmentDate" type="date" class="bg-gray-700 text-white rounded-lg w-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="EnrollmentDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center">
                <a href="@Url.Action("Index", "Student")" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Geri Dön</a>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Öğrenci Ekle</button>
            </div>
        </form>
    </div>
</div>
