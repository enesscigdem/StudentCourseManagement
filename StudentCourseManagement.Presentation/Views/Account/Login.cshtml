@using Microsoft.AspNetCore.Mvc.TagHelpers
@model StudentCourseManagement.Application.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="card auth-card shadow-lg p-4">
    <div class="card-body">
        <h3 class="text-center mb-4">Welcome Back</h3>
        <p class="text-center text-muted">Please login to your account</p>

        <form id="login-form" asp-action="Login" method="post" novalidate>
            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control form-control-lg" placeholder="Email" required/>
                <span asp-validation-for="Email" class="text-danger error"></span>
            </div>
            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" required/>
                <span asp-validation-for="Password" class="text-danger error"></span>
            </div>
            <div class="form-group form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Login</button>
            </div>
        </form>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register here</a></p>
                </div>
        @if(ViewBag.LoginError != null)
        {
            <div class="text-danger mt-3 text-center">
                <p>@ViewBag.LoginError</p>
            </div>
        }
    </div>
</div>
